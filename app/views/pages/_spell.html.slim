.accordion-item
  h2.accordion-header id="spellPanels-heading#{spell.id}"
    row.accordion-button.collapsed type="button" data-bs-toggle="collapse" data-bs-target="#spellPanels-collapse#{spell.id}" aria-expanded="true" aria-controls="spellPanels-collapse#{spell.id}"
      .col-3 = spell.name
      .col-1 Stupeň: #{spell.level}.
      .col-2 Škola: #{spell.school}
      .col-3 Vyvolání: #{Spell::CASTING.key(spell.casting)}
      .col-3 Dosah: #{Spell::DURATION.key(spell.range)}
  .accordion-collapse.collapse id="spellPanels-collapse#{spell.id}" aria-labelledby="spellPanels-heading#{spell.id}"
    .accordion-body
      = CommonMarker.render_html(spell.description, :DEFAULT).html_safe
