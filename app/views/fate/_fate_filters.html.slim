.form-background.p-3.mt-3.delimiter
  = search_form_for @q, url: triky_fate_index_path do |f|
    .row
      .col-md-5.col-lg-3
        = f.input :title_cont, required: false, placeholder: 'Český', label: 'Název'
        = f.input :original_cont, required: false, placeholder: 'Anglický', label: false
      .col-8.col-md-4.col-lg-3 = f.input :source_in, required: false, label: 'Zdroj', collection: Fate::Trick.pluck(:source).uniq.sort.reverse, include_blank: true, input_html: { multiple: true }
      / .col-5.col-md-3.col-lg-2 = f.input :origin_in, required: false, label: 'Původ', collection: Fate::Trick.pluck(:origin).uniq.compact.sort, include_blank: true, input_html: { multiple: true }

      .col-5.col-md-3.col-lg-2 = f.input :dials_array_overlaps, required: false, label: 'FAE přístupy', collection: psql_array_czech_sort(Fate::Trick.pluck(:fae_approach)), include_blank: true, input_html: { multiple: true, class: 'shared-selection' }
      .col-5.col-md-3.col-lg-2 = f.input :dials_array_overlaps, required: false, label: 'FC speciality', collection: psql_array_czech_sort(Fate::Trick.pluck(:fc_extra)), include_blank: true, input_html: { multiple: true, class: 'shared-selection' }
      .col-5.col-md-3.col-lg-2 = f.input :dials_array_overlaps, required: false, label: 'FC dovednosti', collection: psql_array_czech_sort(Fate::Trick.pluck(:fc_skill)), include_blank: true, input_html: { multiple: true, class: 'shared-selection' }
      .col-5.col-md-3.col-lg-2 = f.input :dials_array_overlaps, required: false, label: 'SW archetypy', collection: psql_array_czech_sort(Fate::Trick.pluck(:sw_archetype)), include_blank: true, input_html: { multiple: true, class: 'shared-selection' }
      .col-5.col-md-3.col-lg-2 = f.input :dials_array_overlaps, required: false, label: 'SW protivníci', collection: psql_array_czech_sort(Fate::Trick.pluck(:sw_enemy)), include_blank: true, input_html: { multiple: true, class: 'shared-selection' }
      .col-5.col-md-3.col-lg-2 = f.input :dials_array_overlaps, required: false, label: 'SW speciality', collection: psql_array_czech_sort(Fate::Trick.pluck(:sw_extra)), include_blank: true, input_html: { multiple: true, class: 'shared-selection' }
      .col-5.col-md-3.col-lg-2 = f.input :dials_array_overlaps, required: false, label: 'SW rasy', collection: psql_array_czech_sort(Fate::Trick.pluck(:sw_race)), include_blank: true, input_html: { multiple: true, class: 'shared-selection' }
      .col-5.col-md-3.col-lg-2 = f.input :dials_array_overlaps, required: false, label: 'SW dovednosti', collection: psql_array_czech_sort(Fate::Trick.pluck(:sw_skill)), include_blank: true, input_html: { multiple: true, class: 'shared-selection' }

      .col-6.col-md-3.col-lg-2 = f.input :tags_array_overlaps, required: false, label: 'Tag', collection: psql_array_czech_sort(Fate::Trick.pluck(:tags)), include_blank: true, input_html: { multiple: true }
      .col-4.col-md-2.col-lg-2 = f.input :trick_type_array_overlaps, required: false, label: 'Typ', collection: psql_array_czech_sort(Fate::Trick.pluck(:trick_type)), include_blank: true, input_html: { multiple: true }
      .col-3.col-md-2.col-lg-1 = f.input :actions_array_overlaps, required: false, label: 'Akce', collection: %w[O CA A D AO], include_blank: true, input_html: { multiple: true }
      .col-4.col-md-2.col-lg-2 = f.input :restrictions_array_overlaps, required: false, label: 'Omezení', collection: psql_array_czech_sort(Fate::Trick.pluck(:restrictions)), include_blank: true, input_html: { multiple: true }
      .col-4.col-md-2.col-lg-2 = f.input :costs_array_overlaps, required: false, label: 'Cena', collection: psql_array_czech_sort(Fate::Trick.pluck(:costs)), include_blank: true, input_html: { multiple: true }
    p.text-muted Pro výběr více možností v jedné kategorii držte tlačítko CTRL. Mapování triků je mechanické - při použití triku z jiného zdroje vždy zvaž stylizaci!
    .d-flex.justify-content-between
      p
        span.text-primary.me-1 = @tricks.size
        | triků nalezeno
      div
        = link_to 'Reset', triky_fate_index_path, class: 'btn btn-outline-secondary mx-0 mx-sm-3'
        = f.submit 'Hledat', class: 'btn btn-primary'

.form-background.mb-5.p-3
  h5 Seřadit podle
  .mb-1
    = sort_link(@q, :czech_title, 'Názvu', {}, class: 'btn btn-secondary m-1')
    = sort_link(@q, :dial_and_title, 'Dovednosti', {}, class: 'btn btn-secondary m-1')
